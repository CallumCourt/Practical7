@model IList<Student>

<h3 class="mb-3">Student List</h3>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Course</th>
            <th>Age</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
            <!-- Add suitable razor loop to display each student in a row -->
            <a asp-controller="Student" asp-action="Create" asp-route-id="@s.Id">Create</a>
            
            @foreach(var s in Model) {
            <tr>
                <td>@s.Id</td>
                <td>@s.Name</td>
                <td>@s.Email</td>
                <td>@s.Course</td>
                <td><a asp-controller="Student" asp-action="Details" asp-route-id="@s.Id">View</a></td>
            </tr>
      }
        
    </tbody>
</table>
